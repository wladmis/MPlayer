+#define AV_RL8(x)  AV_RB8(x)
+#define AV_WL8(p, i, d)  AV_WB8(p, i, d)
+
+#define AV_RL16(x) ((((uint8_t*)(x))[1] << 8) | ((uint8_t*)(x))[0])
