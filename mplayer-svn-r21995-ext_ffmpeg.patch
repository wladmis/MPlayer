+                   (((uint8_t*)(x))[2] << 8) | \
+                    ((uint8_t*)(x))[3])
+#define AV_WB32(p, i, d) { \
+                    ((uint8_t*)(p))[(i)+3] = (d); \
+                    ((uint8_t*)(p))[(i)+2] = (d)>>8; \
+                    ((uint8_t*)(p))[(i)+1] = (d)>>16; \
+                    ((uint8_t*)(p))[(i)] = (d)>>24; }
