+                   (((uint8_t*)(x))[2] << 16) | \
+                   (((uint8_t*)(x))[1] << 8) | \
+                    ((uint8_t*)(x))[0])
+#define AV_WL32(p, i, d) { \
+                    ((uint8_t*)(p))[(i)] = (d); \
+                    ((uint8_t*)(p))[(i)+1] = (d)>>8; \
+                    ((uint8_t*)(p))[(i)+2] = (d)>>16; \
