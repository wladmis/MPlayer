From 73ecb46484cb763bad1f83ff00ba0ef6176dd1bd Mon Sep 17 00:00:00 2001
From: Led <led@altlinux.ru>
Date: Thu, 23 May 2013 18:09:09 +0300
Subject: [PATCH 1/5] add NLS support

---
 MPlayer/configure           | 15 +++++++++++++++
 MPlayer/gui/interface.c     |  4 ++--
 MPlayer/gui/skin/skin.c     |  2 +-
 MPlayer/help/help_create.sh |  6 ++++++
 MPlayer/mp_msg.c            | 23 +++++++++++++++++++++--
 5 files changed, 45 insertions(+), 5 deletions(-)

diff --git a/MPlayer/configure b/MPlayer/configure
index d1aa8cdf22..deac5b1f70 100755
--- a/MPlayer/configure
+++ b/MPlayer/configure
@@ -330,6 +330,7 @@ Optional features:
   --enable-gui           enable GMPlayer compilation (GTK+ GUI) [disable]
   --enable-termcap       use termcap database for key codes [autodetect]
   --enable-termios       use termios database for key codes [autodetect]
+  --enable-nls           use Native Language Support [disable]
   --disable-iconv        disable iconv for encoding conversion [autodetect]
   --disable-langinfo     do not use langinfo [autodetect]
   --enable-lirc          enable LIRC (remote control) support [autodetect]
@@ -708,6 +709,7 @@ _dxr2=auto
 _dxr3=auto
 _ivtv=auto
 _v4l2=auto
+_nls=no
 _iconv=auto
 _langinfo=auto
 _rtc=auto
@@ -1087,6 +1089,8 @@ for ac_option do
   --disable-ivtv)       _ivtv=no        ;;
   --enable-v4l2)        _v4l2=yes       ;;
   --disable-v4l2)       _v4l2=no        ;;
+  --enable-nls)		    _nls=yes	    ;;
+  --disable-nls)	    _nls=no		    ;;
   --enable-iconv)       _iconv=yes      ;;
   --disable-iconv)      _iconv=no       ;;
   --enable-langinfo)    _langinfo=yes   ;;
@@ -4156,6 +4160,14 @@ extra_ldflags=$tmp
 fi
 echores "$_rpath"
 
+echocheck "NLS"
+if test "$_nls" = yes ; then
+  _def_nls='#define ENABLE_NLS 1'
+else
+  _def_nls='#undef ENABLE_NLS'
+fi
+echores "$_nls"
+
 echocheck "iconv"
 if test "$_iconv" = auto ; then
   cat > $TMPC << EOF
@@ -8939,6 +8951,9 @@ $def_dl
 $def_dos_paths
 $def_extern_asm
 $def_extern_prefix
+$_def_nls
+#define PACKAGE "mplayer"
+#define LOCALEDIR "$_prefix/share/locale"
 $def_iconv
 $def_kstat
 $def_macosx_bundle
diff --git a/MPlayer/gui/interface.c b/MPlayer/gui/interface.c
index 4928c40206..2c346ad864 100644
--- a/MPlayer/gui/interface.c
+++ b/MPlayer/gui/interface.c
@@ -894,7 +894,7 @@ int gui(int what, void *data)
         btnSet(evSetMoviePosition, state);
 
         if (video_driver_list && !gstrcmp(video_driver_list[0], "dxr3") && (((demuxer_t *)mpctx_get_demuxer(guiInfo.mpcontext))->file_format != DEMUXER_TYPE_MPEG_PS) && !gtkVfLAVC) {
-            gtkMessageBox(MSGBOX_FATAL, MSGTR_GUI_MSG_DXR3NeedsLavc);
+            gtkMessageBox(MSGBOX_FATAL, _(MSGTR_GUI_MSG_DXR3NeedsLavc));
             return False;
         }
 
@@ -1428,7 +1428,7 @@ void gmp_msg(int mod, int lev, const char *format, ...)
     va_list va;
 
     va_start(va, format);
-    vsnprintf(msg, sizeof(msg), format, va);
+    vsnprintf(msg, sizeof(msg), _(format), va);
     va_end(va);
 
     mp_msg(mod, lev, "%s", msg);
diff --git a/MPlayer/gui/skin/skin.c b/MPlayer/gui/skin/skin.c
index 13ea81569f..27ab500548 100644
--- a/MPlayer/gui/skin/skin.c
+++ b/MPlayer/gui/skin/skin.c
@@ -97,7 +97,7 @@ static void skin_error(const char *format, ...)
     va_list ap;
 
     va_start(ap, format);
-    vsnprintf(p, sizeof(p), format, ap);
+    vsnprintf(p, sizeof(p), _(format), ap);
     va_end(ap);
 
     gmp_msg(MSGT_GPLAYER, MSGL_ERR, MSGTR_GUI_MSG_SkinErrorMessage, linenumber, p);
diff --git a/MPlayer/help/help_create.sh b/MPlayer/help/help_create.sh
index d56349a476..ce3bd62560 100755
--- a/MPlayer/help/help_create.sh
+++ b/MPlayer/help/help_create.sh
@@ -42,6 +42,12 @@ cat <<EOF > "$TARGET"
 
 #include <inttypes.h>
 #include "config.h"
+#ifdef ENABLE_NLS
+#include <libintl.h>
+#define _(x) gettext(x)
+#else
+#define _(x) (x)
+#endif
 
 EOF
 
diff --git a/MPlayer/mp_msg.c b/MPlayer/mp_msg.c
index c235503123..6bfac51860 100644
--- a/MPlayer/mp_msg.c
+++ b/MPlayer/mp_msg.c
@@ -25,6 +25,13 @@
 #include "config.h"
 #include "osdep/getch2.h"
 
+#ifdef ENABLE_NLS
+#include <libintl.h>
+#define _(x) gettext(x)
+#else
+#define _(x) (x)
+#endif
+
 #ifdef CONFIG_ICONV
 #include <iconv.h>
 #include <errno.h>
@@ -33,7 +40,7 @@
 #include "mp_msg.h"
 
 /* maximum message length of mp_msg */
-#define MSGSIZE_MAX 3072
+#define MSGSIZE_MAX 4096
 
 int mp_msg_levels[MSGT_MAX]; // verbose level of this module. initialized to -2
 int mp_msg_level_all = MSGL_STATUS;
@@ -77,6 +84,11 @@ const char* filename_recode(const char* filename)
     }
     *precoded = '\0';
     return recoded_filename;
+#ifdef ENABLE_NLS
+    setlocale(LC_ALL, "");
+    bindtextdomain(PACKAGE, LOCALEDIR);
+    textdomain(PACKAGE);
+#endif
 #endif
 }
 
@@ -106,6 +118,13 @@ void mp_msg_uninit(void)
     if (inv_msgiconv != (iconv_t)(-1)) iconv_close(inv_msgiconv);
     free(term_charset_ptr_to_free);
     term_charset_ptr_to_free = NULL;
+#ifdef ENABLE_NLS
+    setlocale(LC_ALL, "");
+    // fix radix char in sprintf's
+    setlocale(LC_NUMERIC, "C");
+    bindtextdomain(PACKAGE, LOCALEDIR);
+    textdomain(PACKAGE);
+#endif
 #endif
 }
 
@@ -211,7 +230,7 @@ void mp_msg_va(int mod, int lev, const char *format, va_list va){
     size_t len;
 
     if (!mp_msg_test(mod, lev)) return; // do not display
-    vsnprintf(tmp, MSGSIZE_MAX, format, va);
+    vsnprintf(tmp, MSGSIZE_MAX, _(format), va);
     tmp[MSGSIZE_MAX-2] = '\n';
     tmp[MSGSIZE_MAX-1] = 0;
 
